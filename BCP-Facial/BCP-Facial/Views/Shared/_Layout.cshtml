<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BCP_Facial</title>
    <link rel="stylesheet" href="~/lib/bootstrap-4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.12.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:antiquewhite;">
    <script src="~/lib/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/lib/bootstrap-4.4.1/js/bootstrap.min.js"></script>
    <script src="~/lib/fontawesome-free-5.12.1/js/all.min.js"></script>
    <script src="~/js/site.js"></script>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item"><a href="/Lecturer" class="nav-link">Lecturers</a></li>
                            <li class="nav-item"><a href="/Student" class="nav-link">Students</a></li>
                            <li class="nav-item"><a href="/Class" class="nav-link">Classes</a></li>
                        }

                        @if (User.IsInRole("LECTURER"))
                        {
                            <li class="nav-item"><a href="/MyClass" class="nav-link">My Class</a></li>
                        }
                        <li class="nav-item"><a href="/MyAttendance" class="nav-link">My Attendance</a></li>
                    }


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-block d-lg-none"><a href="#" class="nav-link" id="logoutButton1" onclick="logout();"><span id="logoutLabel1">Logout</span></a></li>
                    }
                    else
                    {
                        <li class="nav-item d-block d-lg-none"><a href="/login" class="nav-link">Login</a></li>
                    }
                </ul>
                <ul class="navbar-nav right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-none d-lg-block"><a href="#" class="btn btn-danger" id="logoutButton2" onclick="logout();"><span id="logoutLabel2">Logout</span></a></li>
                    }
                    else
                    {
                        <li class="nav-item d-none d-lg-block"><a href="/Login" class="btn btn-primary">Login</a></li>
                    }
                </ul>
            </div>
        </nav>
        <div style="background-color: #fff5f6; border: 1px solid black; min-height:85vh;">
            @RenderBody()
        </div>
            <div class="bg-dark text-white text-center">
                <div class="text-center" style="padding: 10px 0px;">
                    | Manage your attendance in an unimaginable way. |
                </div>
            </div>
        </div>
</body>
</html>
