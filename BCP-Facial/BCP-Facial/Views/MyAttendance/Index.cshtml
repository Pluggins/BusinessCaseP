
@{
    ViewData["Title"] = "MyAttendance";
}
@model BCP_Facial.Models.ViewModels.MyAttendanceViewModel
@using BCP_Facial.Models.ViewModels

<div style="height: 120px;background-color: #624949;position: relative">
    <div style="position:absolute; text-align:center; width:100%; font-size:40px; color:white; top:30%">
        My Attendance
    </div>
</div>
<div style="padding:30px 50px;">
    <div style="margin-top:40px;">
        <div style="margin-bottom:30px; font-size:17px; color:#4f4e4e;">
            Student Name: 
            <div style="font-size:30px;color:#1a6626; padding-left:20px;">@Model.StudentName</div>
        </div>
        <table class="table table-striped table-bordered" style="background-color:white;" id="classList">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Attendance</th>
                    <th>Date Joined</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MyAttendanceViewItem item in Model.Classes)
                {
                <tr>
                    <td>@item.ClassName</td>
                    <td>@item.Attendance</td>
                    <td>@item.DateJoined</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#classList').DataTable({
            'order': [[2, "asc"]],
            "columnDefs": [
                { "width": "250px", "targets": 0 },
                { "width": "100px", "targets": 1 },
                { "width": "100px", "targets": 2 }
            ],
        });
    });
</script>